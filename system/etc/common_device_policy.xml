<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<policy>
    <!-- Forward SCREEN_ON Intents to ControllerManager -->
    <entry>
        <event type="intent" intent="android.intent.action.SCREEN_ON" />
        <action type="intent" intent="android.intent.action.SCREEN_ON" component="com.amazon.device.controllermanager/.ScreenOnReceiver" />
    </entry>
</policy>
